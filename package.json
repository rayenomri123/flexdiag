{
  "name": "flexdiag",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./electron/main.js",
  "author": {
    "name": "Omri Rayen",
    "email": "rayenomri23p@gmail.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "concurrently \"npm:dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:prod": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4",
    "wait-on": "^8.0.3"
  },
    "build": {
    "appId": "com.yourcompany.flexdiag",
    "productName": "FlexDiag",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "linux": {
      "maintainer": "Omri Rayen <rayenomri23p@gmail.com>",
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png"
    },
    "publish": null
  }
}
